<form action="/notes/save" method="POST">
<input type="hidden" name="docreate" value="{{#if docreate}}create{{else}}update{{/if}}">
<p>Key:
    {{#if docreate}}
    <input type="text" name="notekey" value="">
    {{else}}
    {{#if note}}
    {{notekey}}
    {{/if}}
    <input type="hidden" name="notekey" value="{{#if note}}{{notekey}}{{/if}}">
    {{/if}}
</p>
<p>Title:
    <input type="text" name="title" value="{{#if note}}{{note.title}}{{/if}}">
</p>
<br>
<textarea name="body" id="" cols="40" rows="5">{{#if note}}{{note.body}}{{/if}}</textarea>
<br>
<input type="submit" value="Submit">
</form>